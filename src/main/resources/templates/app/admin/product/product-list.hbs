{{#partial "headcode" }}
{{/partial}}

{{#partial "footercode" }}
{{/partial}}

{{#partial "content" }}
<div class="container min-height-container">
    <div class="form-group {{#if successMsg}}has-error{{/if}}">
        {{#if successMsg}}<span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div>
                {{> app/components/page_search }}
            </div>
            <div class="page-header" name="top">
                <h1>Products</h1>
            </div>
            {{#if isRootRole }}
                <a href="{{addProductUrl}}"
                    class="btn btn-primary rs-add-button">
                <i class="fa fa-plus"></i> Add Product</a>
                {{#if products}}
                    {{> app/components/previous-next-links }}
                    <table show-filter="false"
                        class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="header">
                                    <div>Name</div>
                                </th>
                                <th class="header">
                                    <div>Description</div>
                                </th>                            
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr class="rs-clickable">
                                    <td>
                                        <a href="{{detailsUrl}}/{{this.id}}">
                                            {{this.name}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{detailsUrl}}/{{this.id}}">
                                            {{this.description}}
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <div class="alert alert-info">
                        No products were found. Click <strong>Add Product</strong> to add an product.
                    </div>
                {{/if}}
            {{/if}}
        </div>
        {{#if products}}
            {{> app/components/previous-next-links }}
        {{/if}}
    </div>

</div><!-- /container -->
{{/partial}}
{{> app/common/master }}