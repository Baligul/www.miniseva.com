{{#partial "headcode" }}
{{/partial}}
{{#partial "footercode" }}
{{/partial}}
{{#partial "content" }}

{{#if subcategories}}
    <!-- sub-categories -->
    <div class="courses_box1">
    <div class="container">
            <div class="form-group {{#if successMsg}}has-error{{/if}}">
                {{#if successMsg}}<span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
            </div>
        <h3 class="tittle">Grades 7 through 12 packages with notes</h3>
        <div class="wow fadeInUp animated" data-wow-delay=".5s">
            <div class="course_list">
                <div class="table-header clearfix">
                <div class="name_col">Package Name</div>
                <div class="duration_col">Duration</div>
                <div class="duration_col">Price</div>
                <div class="duration_col"></div>
                </div>
                <form action="/packages" method="get">
                    <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                    <ul class="table-list">
                        {{#each subcategories}}
                        <li class="clearfix">
                            <div class="name_col">
                                <a href="/package-details/{{this.slug}}/{{this.id}}">
                                    {{this.name}}
                                    <p>
                                    {{this.description}}
                                    </p>
                                </a>
                            </div>
                            <div class="duration_col"><i class="fa fa-clock-o" aria-hidden="true"></i> {{this.duration}}</div>
                            {{#ifeqStr domain "MiniSevaIndia.com"}}
                                <div class="duration_col"><i class="fa fa-inr" aria-hidden="true"></i> {{this.priceInr}}.00</div>
                            {{/ifeqStr}}
                            {{#ifeqStr domain "MiniSevaLMS.com"}}
                                <div class="duration_col"><i class="fa fa-usd" aria-hidden="true"></i>{{this.priceUsd}}</div>
                            {{/ifeqStr}}
                            <div class="duration_col"><input type="checkbox" name="subcategoriesIds" value="{{this.id}}" {{#ifInclude subcategoriesIds this.id}}checked{{/ifInclude}} onChange="this.form.submit()"></div>
                        </li>
                        {{/each}}
                    </ul>
                    <br/>
                    {{#ifeqStr domain "MiniSevaIndia.com"}}                    
                        <div class="container text-center couponLink">
                            <a href="javascript:void(0)" onclick="showHideCouponForm()">Have a coupon code? Click here for instant discount</a>
                            </br> 
                            <div style="display:none" id="couponForm"> 
                                <input type="text" value="{{coupon}}" name="coupon" class="span5" placeholder="Enter coupon here">&nbsp;<button class="btn btn-success" type="submit">Apply</button>
                            </div>
                        </div>
                        <br/>
                    {{/ifeqStr}}
                </form>
                <div class="container">
                    <div class="col-md-8"><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Cancel</a></div>
                    {{#ifeqStr domain "MiniSevaIndia.com"}}
                        <div class="col-md-2">{{#if discount}}<strong>Discount - <i class="fa fa-inr" aria-hidden="true"></i> {{discount}}.00</strong><br/>{{/if}}<strong>Total <i class="fa fa-inr" aria-hidden="true"></i> {{total}}.00</strong></div>
                    {{/ifeqStr}}
                    {{#ifeqStr domain "MiniSevaLMS.com"}}
                        <div class="col-md-2"><strong>Total <i class="fa fa-usd" aria-hidden="true"></i>{{total}}</strong></div>
                    {{/ifeqStr}}
                    <form action="{{#if loggedIn}}/packages-signup{{else}}/signup{{/if}}" method="get">
                        <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                        <input type="hidden" name="coupon" value="{{coupon}}" />
                        <input type="hidden" name="amount" value="{{amount}}" />
                        <input type="hidden" name="total" value="{{total}}" />
                        <input type="hidden" name="discount" value="{{discount}}" />
                        {{#each subcategoriesIds}}
                            <input type="hidden" name="subcategoriesIds" value="{{this}}" />
                        {{/each}}
                        
                        <div class="col-md-2 text-right">
                            <button type="submit" name="action" value="createOrder" class="btn btn-success"><i class="fa fa-first-order" aria-hidden="true"></i> Create order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    </div>
    <!-- sub-categories -->
{{else}}
   <div class="page-wrapper">
   <div class="container">
      <center>
         <br/>
         <h2 style="color:blue">Information!</h2>
         <br/>
         <h2 >It seems that you have already purchased all of the packages. Please click on USE LMS to start learning.</h2>
         <br/>
      </center>
   </div>
</div>
{{/if}}
{{/partial}}
{{> common/master }}