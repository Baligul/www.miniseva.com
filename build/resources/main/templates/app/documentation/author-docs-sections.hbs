{{#partial "content" }}
<div class="container min-height-container">
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{docsSectionsUrl}}">Sections</a></li>
                <li class="active">Edit Section</li>
            </ol>
            <form action="{{formPostUrl}}" method="post">
                <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Edit Section</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group {{#if titleError}}has-error{{/if}}">
                            <label for="title">{{#if titleError}}<i class="fa fa-times-circle-o"></i>{{/if}} Title </label>
                            {{#if titleError}}<span class="help-block dlxs-validation-error">({{titleError}})</span>{{/if}}
                            <input name="title" value="{{content.title}}" type="text" class="form-control" placeholder="Title">
                        </div>

                        <div class="form-group {{#if docError}}has-error{{/if}}">
                            <label for="doc">{{#if docError}}<i class="fa fa-times-circle-o"></i>{{/if}} Contents </label>
                            {{#if docError}}<span class="help-block dlxs-validation-error">({{docError}})</span>{{/if}}
                            {{#if showPreview}}
                                <input type="hidden" name="doc" value="{{content.doc}}" />
                                <div>{{md content.doc}}</div>
                            {{else}}
                                <textarea name="doc" placeholder="Contents" style="width: 100%; height: 500px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{content.doc}}</textarea>
                            {{/if}}
                        </div>                        
                    </div>
                    <div class="panel-footer">
                        <button type="submit" 
                                name="action" 
                                value="{{actionSave}}" 
                                class="btn btn-success">Save</button>
                        <button type="submit" 
                                name="action" 
                                value="{{actionDelete}}" 
                                class="btn btn-danger">Delete</button>
                        {{#unless section.published}}
                            <button type="submit" 
                                    name="action" 
                                    value="{{actionPublish}}" 
                                    class="btn btn-success">Publish</button>
                        {{else}}
                            <button type="submit" 
                                    name="action" 
                                    value="{{actionUnpublish}}" 
                                    class="btn btn-success">Unpublish</button>
                        {{/unless}}
                        {{#unless showPreview}}
                            <button type="submit" 
                                    name="action" 
                                    value="{{actionPreview}}" 
                                    class="btn btn-success">Preview</button>
                        {{else}}
                            <button type="submit" 
                                    name="action" 
                                    value="{{actionEditHtml}}" 
                                    class="btn btn-success">Edit Html</button>
                        {{/unless}}
                        <a href="{{docsSectionsUrl}}"
                        class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /container -->
{{/partial}}
