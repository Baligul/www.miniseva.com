{{#partial "content" }}
<div class="container min-height-container">
    <div class="row">
        <div class="col-xs-12">
            <div>
                {{> app/components/page_search }}
            </div>
            <div class="page-header" name="top">
                <h1>Exams</h1>
            </div>
            {{#if exams}}
                {{> app/components/previous-next-links }}
            {{/if}}
            <div>
                <table
                    show-filter="false"
                    class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="rs-center">Exam Name</th>
                            <th class="rs-center">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each exams}}
                            <tr>
                                <td>
                                    <a href="{{baseExamUrl}}/{{this.id}}">
                                        {{this.name}}
                                    </a>
                                </td>
                                <td class="rs-center">
                                    <a href="{{baseExamUrl}}/{{this.id}}">
                                        {{this.description}}
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{#if exams}}
                {{> app/components/previous-next-links }}
            {{/if}}
        </div>
    </div>
</div><!-- /container -->
{{/partial}}
{{> app/common/master }}
