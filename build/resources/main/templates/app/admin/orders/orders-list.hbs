{{#partial "headcode" }}
{{/partial}}

{{#partial "footercode" }}
{{/partial}}

{{#partial "content" }}
<div class="container min-height-container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header" name="top">
                <h1>Orders</h1>
            </div>
            {{#if isRootRole }}
                {{#if orders}}
                    {{> app/components/previous-next-links }}
                    <table show-filter="false"
                        class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="header">
                                    <div>Order Id</div>
                                </th>
                                <th class="header">
                                    <div>Amount</div>
                                </th>
                                <th class="header">
                                    <div>Ordered By</div>
                                </th>
                                <th class="header">
                                    <div>Address</div>
                                </th>
                                <th class="header">
                                    <div>Ordered On</div>
                                </th>
                            
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                                <tr>
                                    <td>
                                        <a href="{{detailsUrl}}/{{this.id}}">
                                            {{this.id}}
                                        </a>
                                    </td>
                                    <td>
                                        {{this.amount}}
                                    </td>
                                    <td>
                                        {{this.orderBy}}
                                    </td>
                                    <td>
                                        {{this.address}}
                                    </td>
                                    <td>
                                        {{this.createdOnFormatted}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <div class="alert alert-info">
                        No orders were found.
                    </div>
                {{/if}}
            {{/if}}
        </div>
        {{#if orders}}
            {{> app/components/previous-next-links }}
        {{/if}}
    </div>

</div><!-- /container -->
{{/partial}}
{{> app/common/master }}
