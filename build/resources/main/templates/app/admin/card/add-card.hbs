{{#partial "content" }}
<div class="container min-height-container">
    <div class="form-group {{#if successMsg}}has-error{{/if}}">
        {{#if successMsg}}<span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>Admin</li>
                <li><a href="/app/admin/card">Cards</a></li>
                <li class="active">Add Card</li>
            </ol>
            <form action="{{formPostUrl}}" method="post">
                <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add Card</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group {{#if cardNoError}}has-error{{/if}}">
                            <label for="cardNo">{{#if cardNoError}}<i class="fa fa-times-circle-o"></i>{{/if}} Card No</label>
                            {{#if cardNoError}}<span class="help-block dlxs-validation-error">({{cardNoError}})</span>{{/if}}
                            <input name="cardNo" type="text" value="{{#if cardNo}}{{cardNo}}{{else}}{{card.cardNo}}{{/if}}" class="form-control" placeholder="Card No">
                        </div>
                        
                        <div class="form-group {{#if amountError}}has-error{{/if}}">
                            <label for="amount">{{#if amountError}}<i class="fa fa-times-circle-o"></i>{{/if}} Amount </label>
                            {{#if amountError}}<span class="help-block dlxs-validation-error">({{amountError}})</span>{{/if}}
                            <input name="amount" type="number" value="{{card.amount}}" class="form-control" placeholder="Amount">
                        </div>

                        <div class="form-group {{#if expiresOnError}}has-error{{/if}}">
                            <label for="expiresOn">{{#if expiresOnError}}<i class="fa fa-times-circle-o"></i>{{/if}} Expires On </label>
                            {{#if expiresOnError}}<span class="help-block dlxs-validation-error">({{expiresOnError}})</span>{{/if}}
                            <input name="expiresOn" type="date" value="{{card.formattedExpiresOn}}" class="form-control" placeholder="Expires On">
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" 
                                    name="action" 
                                    value="save" 
                                    class="btn btn-success">Save</button>
                        <a href="/app/admin/card"
                            class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>         
        </div>
    </div>
</div><!-- /container -->
{{/partial}}
{{> app/common/master }}