{{#partial "content" }}
<div class="container min-height-container">
    <div class="form-group {{#if successMsg}}has-error{{/if}}">
        {{#if successMsg}}<span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>Admin</li>
                <li><a href="{{blockUrl}}">Blocks</a></li>
                <li class="active">Block Details</li>
            </ol>
            <form action="{{formPostUrl}}" method="post">
                <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Block Details</h3>
                    </div>
                    <div class="panel-body">
                        <input type="hidden" name="id" value="{{block.id}}" />
                        <div class="form-group {{#if nameError}}has-error{{/if}}">
                            <label for="name">{{#if nameError}}<i class="fa fa-times-circle-o"></i>{{/if}} Name </label>
                            {{#if nameError}}<span class="help-block dlxs-validation-error">({{nameError}})</span>{{/if}}
                            <input name="name" value="{{block.name}}" type="text" class="form-control" placeholder="Name">
                        </div>

                        <div class="form-group">
                            <label for="lead">Block</label>
                            {{#if blockIdError}}<span class="help-block dlxs-validation-error">({{blockIdError}})</span>{{/if}}
                            <select name="leadId" class="form-control">
                                <option value="">-- Choose Lead --</option>
                                {{#each leads}}
                                    <option {{#ifeq block.leadId this.id}}selected="selected"{{/ifeq}} value="{{this.id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" 
                                name="action" 
                                value="save" 
                                class="btn btn-success">Save changes</button>
                        <a href="{{blockUrl}}"
                                class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div><!-- /container -->
{{/partial}}
{{> app/common/master }}