{{#partial "headcode" }} {{/partial}} {{#partial "footercode" }} {{/partial}} {{#partial "content" }}
<div class="container min-height-container">
    <div class="form-group {{#if successMsg}}has-error{{/if}}">
        {{#if successMsg}}
        <span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>Admin</li>
                <li>
                    <a href="/app/admin/slot">slots</a>
                </li>
                <li class="active">Add Slot</li>
            </ol>
            <form action="{{formPostUrl}}" method="post">
                <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add Slot</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group {{#if slotError}}has-error{{/if}}">
                            <label for="slot">{{#if slotError}}
                                <i class="fa fa-times-circle-o"></i>{{/if}} Slot </label>
                            {{#if slotError}}
                            <span class="help-block dlxs-validation-error">({{slotError}})</span>{{/if}}
                            <input name="slotVal" value="{{slot.slotVal}}" type="text" class="form-control" placeholder="Slot">
                        </div>
                        <div class="form-group {{#if endTimeError}}has-error{{/if}}">
                            <label for="endTime">{{#if endTimeError}}
                                <i class="fa fa-times-circle-o"></i>{{/if}} Description </label>
                            {{#if endTimeError}}
                            <span class="help-block dlxs-validation-error">({{endTimeError}})</span>{{/if}}
                            <input name="endTime" value="{{slot.endTime}}" type="time" class="form-control" placeholder="End time">
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" name="action" value="save" class="btn btn-success">Save</button>
                        <a href="/app/admin/slot" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /container -->
{{/partial}} {{> app/common/master }}