<!-- Search form -->
<div>
    <div class="col-xs-4">
        <form action="{{baseUrl}}" method="get">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-list-alt" aria-hidden="true">&nbsp;&nbsp;Show all {{itemName}}</i>
                    </button>
                </span>
            </div>
        </form>
    </div>
    <div class="page_search">
        <form action="{{baseUrl}}" method="get">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" required>
                <span class="input-group-btn">
                    <button name="action" value="search" type="submit" class="btn btn-primary">
                        <i class="fa fa-search" aria-hidden="true">&nbsp;&nbsp;Search {{itemName}}</i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>