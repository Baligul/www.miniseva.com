{{#partial "content" }}
<div class="container min-height-container">
   <div class="row">
        <div class="col-xs-12">
            <div class="page-header" name="top">
                <h1>Grades</h1>
            </div>
            {{#unless subcategories}}
                <div class="alert alert-info">
                    No sub categories were found. Please ask your administrator/teacher to publish sub categories.
                </div>
            {{/unless}}
            {{#if subcategories}}
                {{> app/components/previous-next-links }}
            {{/if}}
            {{#each subcategories}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="font-size: 16px; font-weight: bold;">{{this.name}}</h3>
                    </div>
                    <div class="panel-body">
                        {{this.description}}
                    </div>

                    <div class="panel-footer" style="background-color: #fff;">
                        <ul class="nav nav-pills">
                            <li>
                                <a href="/app/courses/{{this.slug}}/{{this.id}}"
                                class=""><i class="fa fa-files-o"></i> Courses
                                    <span class="badge">{{this.coursesCount}}</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            {{/each}}
            {{#if subcategories}}
                {{> app/components/previous-next-links }}
            {{/if}}
        </div>
    </div>
   <!-- /row -->
</div>
<!-- /container -->
{{/partial}}
{{> app/common/master }}
