{{#partial "content" }}
<div class="container min-height-container">
    <div class="row">
        <!-- Content Section -->
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header" name="top">
                    <h1>Questions</h1>
                </div>

                <div>
                    <a class="btn btn-primary rs-add-button"
                            href="{{askQuestionUrl}}">
                        <i class="fa fa-plus"></i> Ask Question
                    </a>
                </div>

                <div>
                    <div>
                        {{#unless qnaQuestions}}
                            <div class="alert alert-info">
                                No questions were found. Click <strong>Ask Question</strong> to add a question.
                            </div>
                        {{/unless}}
                        {{#if qnaQuestions}}
                            <table class="table table-bordered table-hover">
                                <tbody>
                                    <th>Question</th>
                                    <th>Associated with</th>
                                    <th>Answer accepted</th>
                                    {{#each qnaQuestions}}
                                        <tr class="clickable-row">
                                            <td><a href="{{questionAnswersListUrl}}/{{this.id}}?action=question">{{this.question}}</a></td>
                                            <td class="rs-center"><a href="{{questionAnswersListUrl}}/{{this.id}}?action=question">{{this.associateWith}}</a></td>
                                            <td class="rs-center">
                                                <a href="{{questionAnswersListUrl}}/{{this.id}}?action=question">
                                                    {{#if this.answerAccepted}}
                                                        <i class="fa fa-check rs-green"></i>
                                                    {{else}}
                                                        <i class="fa fa-minus rs-red"></i>
                                                    {{/if}}
                                                </a>
                                            </td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        {{/if}}
                    </div>
                    {{#if qnaQuestions}}
                        {{> app/components/previous-next-links }}
                    {{/if}}
                </div>
            </div>
        </div>
        <!-- col-lg-8 / Content Section -->
    </div><!-- /row -->
</div><!-- /container -->
{{/partial}}
{{> app/common/master }}
