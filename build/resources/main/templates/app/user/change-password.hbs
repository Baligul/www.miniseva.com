{{#partial "headcode" }} {{/partial}} {{#partial "footercode" }} {{/partial}} {{#partial "content" }}
<div class="container min-height-container">
    <div class="form-group {{#if successMsg}}has-error{{/if}}">
        {{#if successMsg}}<span class="help-block dlxs-validation-error">{{successMsg}}</span>{{/if}}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form action="{{formPostUrl}}" method="post">
                <input type="hidden" name="{{csrfParameterName}}" value="{{csrfToken}}" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Change Password</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group {{#if passwordError}}has-error{{/if}}">
                            <label for="password">{{#if passwordError}}<i class="fa fa-times-circle-o"></i>{{/if}} Password </label>                            
                            {{#if passwordError}}<span class="help-block dlxs-validation-error">({{passwordError}})</span>{{/if}}
                            <input name="password" type="password" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group {{#if confirmPasswordError}}has-error{{/if}}">
                            <label for="confirmPassword">{{#if confirmPasswordError}}<i class="fa fa-times-circle-o"></i>{{/if}} Confirm password </label>
                            {{#if confirmPasswordError}}<span class="help-block dlxs-validation-error">({{confirmPasswordError}})</span>{{/if}}
                            <input name="confirmPassword" type="password" class="form-control" placeholder="Confirm password" required>
                        </div>

                        <div>
                            Password / Confirm Password must be:
                            <ul>
                                <li>Minimum of 5 characters</li>
                                <li>Maximum of 20 characters</li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" name="action" value="changePassword" class="btn btn-success">Change Password</button>
                        <a href="/app/profile" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /container -->
{{/partial}} {{> app/common/master }}